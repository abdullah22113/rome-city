.image-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 1rem;
  padding: 2rem;
}
.image-grid img {
  width: 100%;
  height: auto;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  transition: transform 0.3s;
}
.image-grid img:hover {
  transform: scale(1.05);
}
.highlights ul {
  list-style: disc;
  padding-left: 2rem;
  margin-top: 1rem;
}

